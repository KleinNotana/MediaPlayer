<Application x:Class="MyMediaPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyMediaPlayer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml" />
                <ResourceDictionary Source="Styles/ButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:PathToNameConverter x:Key="PathToNameConverter" />
            <local:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
            <local:TimeSpanToSecondConverter x:Key="TimeSpanToSecondConverter" />
        </ResourceDictionary>

        
    </Application.Resources>
</Application>
